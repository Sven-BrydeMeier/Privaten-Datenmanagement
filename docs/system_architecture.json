    },
    {
      "name": "Korrespondenz_Mieter",
      "filter": {
        "property_type": "eigentum_vermietet",
        "doc_type": {"in": ["Korrespondenz", "Maengelanzeige", "Kuendigung_Mietvertrag"]}
      },
      "group_by": ["property_id", "tenant_name"],
      "purpose": "Schriftverkehr mit Mietern"
    },
    {
      "name": "KFZ_Kosten_Jahr",
      "filter": {
        "category": "Fahrzeuge",
        "amount_type": "ausgabe",
        "doc_date": {"year": "current"}
      },
      "group_by": "license_plate",
      "aggregate": {"sum": "amount"},
      "purpose": "Fahrzeugkosten pro KFZ"
    }
  ],

  "learning_policy": {
    "learn_on_manual_move": true,
    "learned_rule_template": {
      "captured_features": [
        {
          "field": "counterparty_normalized",
          "weight": 1.0,
          "match_type": "exact"
        },
        {
          "field": "doc_type",
          "weight": 0.8,
          "match_type": "exact"
        },
        {
          "field": "policy_number",
          "weight": 0.9,
          "match_type": "exact",
          "if_exists": true
        },
        {
          "field": "contract_number",
          "weight": 0.9,
          "match_type": "exact",
          "if_exists": true
        },
        {
          "field": "iban_counterparty",
          "weight": 0.7,
          "match_type": "exact",
          "if_exists": true
        },
        {
          "field": "property_address",
          "weight": 0.85,
          "match_type": "fuzzy",
          "if_exists": true
        },
        {
          "field": "keywords",
          "weight": 0.5,
          "match_type": "any_of",
          "min_match": 2
        }
      ],
      "target_folder_path": "{{moved_to_path}}",
      "initial_confidence": 0.6,
      "confidence_increment_on_confirm": 0.1,
      "confidence_decrement_on_reject": 0.2,
      "max_confidence": 0.99
    },
    "confidence_threshold_auto_apply": 0.75,
    "confidence_threshold_suggest": 0.5,
    "conflict_resolution": {
      "strategy": "specificity_then_recency",
      "rules": [
        {
          "name": "specificity_wins",
          "description": "Regel mit mehr passenden Feldern gewinnt",
          "priority": 1
        },
        {
          "name": "higher_confidence_wins",
          "description": "Bei gleicher Spezifitaet gewinnt hoehere Konfidenz",
          "priority": 2
        },
        {
          "name": "recent_wins",
          "description": "Bei Gleichstand gewinnt die neuere Regel",
          "priority": 3
        }
      ],
      "manual_override": true,
      "notify_on_conflict": true
    },
    "rule_lifecycle": {
      "min_applications_before_auto": 3,
      "decay_after_days_unused": 365,
      "decay_rate": 0.1,
      "delete_below_confidence": 0.2,
      "merge_similar_rules": true,
      "similarity_threshold_merge": 0.9
    },
    "feedback_loop": {
      "track_auto_assignments": true,
      "allow_quick_reject": true,
      "learn_from_rejection": true,
      "periodic_review_prompt_days": 90
    }
  },

  "filename_standard": {
    "pattern": "{doc_date}__{doc_type}__{counterparty_normalized}__{subject_short}.pdf",
    "date_format": "YYYY-MM-DD",
    "separator": "__",
    "max_length": 200,
    "character_replacement": {
      "umlauts": {
        "ae": "ae",
        "oe": "oe",
        "ue": "ue",
        "Ae": "Ae",
        "Oe": "Oe",
        "Ue": "Ue",
        "ss": "ss"
      },
      "special_chars": {
        " ": "_",
        "/": "-",
        "\\": "-",
        ":": "-",
        "&": "und"
      },
      "remove": ["?", "*", "\"", "<", ">", "|", "'", ",", ";"]
    },
    "examples": [
      "2024-03-15__Rechnung__Deutsche_Telekom__Mobilfunk_Maerz.pdf",
      "2024-01-20__Nebenkostenabrechnung__Hausverwaltung_Schmidt__Abrechnungsjahr_2023.pdf",
      "2024-05-01__Gehaltsabrechnung__Musterfirma_GmbH__Mai_2024.pdf",
      "2024-02-28__Lebensversicherung_Standmitteilung__Signal_Iduna__Jahresinformation.pdf"
    ]
  },

