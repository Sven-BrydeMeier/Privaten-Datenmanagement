  "inbox_routing_rules": [
    {
      "priority": 1,
      "name": "Steuererklaerung_nach_Jahr",
      "conditions": {
        "doc_type": ["Steuererklaerung", "Steuerbescheid"],
        "tax_year": {"exists": true}
      },
      "target_path": "03_Steuern/Steuererklaerungen/{tax_year}",
      "actions": ["set_retention_10_years"]
    },
    {
      "priority": 2,
      "name": "Gehaltsabrechnung_nach_Jahr",
      "conditions": {
        "doc_type": "Gehaltsabrechnung",
        "doc_date": {"extract": "year"}
      },
      "target_path": "08_Arbeit_Bildung/Gehaltsabrechnungen/{year}",
      "actions": ["set_retention_6_years"]
    },
    {
      "priority": 3,
      "name": "Versorgungswerk",
      "conditions": {
        "OR": [
          {"counterparty_contains": ["Versorgungswerk", "Aerzteversorgung", "Rechtsanwaltsversorgung", "Architektenversorgung"]},
          {"pension_type": "versorgungswerk"}
        ]
      },
      "target_path": "08_Arbeit_Bildung/Rente_Vorsorge/Versorgungswerk",
      "actions": []
    },
    {
      "priority": 4,
      "name": "Signal_Iduna_Altersvorsorge",
      "conditions": {
        "counterparty_normalized": "Signal_Iduna",
        "doc_type": ["Lebensversicherung_Standmitteilung", "Versicherungspolice", "Beitragsrechnung_Versicherung"],
        "keywords_any": ["Altersvorsorge", "Rentenversicherung", "Lebensversicherung"]
      },
      "target_path": "08_Arbeit_Bildung/Rente_Vorsorge/Private_Altersvorsorge/Signal_Iduna",
      "actions": []
    },
    {
      "priority": 5,
      "name": "Signal_Iduna_Sonstige",
      "conditions": {
        "counterparty_normalized": "Signal_Iduna",
        "NOT": {"keywords_any": ["Altersvorsorge", "Rentenversicherung", "Lebensversicherung"]}
      },
      "target_path": "04_Versicherungen/Lebensversicherung/Signal_Iduna_Leben",
      "actions": []
    },
    {
      "priority": 10,
      "name": "Nebenkostenabrechnung_Eigene_Miete",
      "conditions": {
        "doc_type": "Nebenkostenabrechnung",
        "property_type": "eigene_miete"
      },
      "target_path": "05_Wohnen_Immobilien/Eigene_Miete/Nebenkostenabrechnungen",
      "actions": ["create_deadline_widerspruch_30_tage"]
    },
    {
      "priority": 11,
      "name": "Nebenkostenabrechnung_Vermietung",
      "conditions": {
        "doc_type": "Nebenkostenabrechnung",
        "property_type": "eigentum_vermietet",
        "property_id": {"exists": true}
      },
      "target_path": "05_Wohnen_Immobilien/Vermietung/{property_id}/Nebenkostenabrechnungen",
      "actions": []
    },
    {
      "priority": 12,
      "name": "Mieteinnahme",
      "conditions": {
        "doc_type": "Mieteinnahme",
        "property_id": {"exists": true}
      },
      "target_path": "05_Wohnen_Immobilien/Vermietung/{property_id}",
      "actions": ["mark_as_einnahme"]
    },
    {
      "priority": 13,
      "name": "Betriebskosten_Vermietung",
      "conditions": {
        "property_type": "eigentum_vermietet",
        "keywords_any": ["Heizkosten", "Wasserkosten", "Muellgebuehren", "Hausmeister"]
      },
      "target_path": "05_Wohnen_Immobilien/Vermietung/{property_id}/Betriebskosten_Belege",
      "actions": []
    },
    {
      "priority": 14,
      "name": "Hausgeld_WEG",
      "conditions": {
        "doc_type": ["Hausgeldabrechnung", "WEG_Protokoll", "Wirtschaftsplan"],
        "property_id": {"exists": true}
      },
      "target_path": "05_Wohnen_Immobilien/Eigentum/{property_id}/Hausgeld_WEG",
      "actions": []
    },
    {
      "priority": 20,
      "name": "KFZ_nach_Kennzeichen",
      "conditions": {
        "license_plate": {"exists": true},
        "category": "Fahrzeuge"
      },
      "target_path": "07_Fahrzeuge/PKW_{license_plate}",
      "actions": ["create_folder_if_not_exists"]
    },
    {
      "priority": 30,
      "name": "Rechnung_offen",
      "conditions": {
        "doc_type": "Rechnung",
        "payment_status": "offen",
        "due_date": {"exists": true}
      },
      "target_path": "_KEEP_IN_INBOX_",
      "actions": ["create_payment_reminder", "flag_action_required"]
    },
    {
      "priority": 40,
      "name": "Kind_Dokumente",
      "conditions": {
        "family_member": {"exists": true},
        "relation": "kind"
      },
      "target_path": "10_Familie_Kinder/Kind_{family_member}",
      "actions": ["create_folder_if_not_exists"]
    },
    {
      "priority": 100,
      "name": "Versicherung_nach_Typ",
      "conditions": {
        "category": "Versicherungen",
        "policy_number": {"exists": true}
      },
      "target_path": "04_Versicherungen/{insurance_type}",
      "actions": []
    },
    {
      "priority": 200,
      "name": "Fallback_nach_Kategorie",
      "conditions": {
        "category": {"exists": true}
      },
      "target_path": "{category_folder_root}",
      "mapping": {
        "Identitaet": "01_Identitaet_Stamm",
        "Finanzen": "02_Finanzen",
        "Steuern": "03_Steuern",
        "Versicherungen": "04_Versicherungen",
        "Wohnen": "05_Wohnen_Immobilien",
        "Gesundheit": "06_Gesundheit",
        "Fahrzeuge": "07_Fahrzeuge",
        "Arbeit": "08_Arbeit_Bildung",
        "Vertraege": "09_Vertraege_Recht",
        "Familie": "10_Familie_Kinder"
      },
      "actions": []
    },
    {
      "priority": 900,
      "name": "Fallback_Absenderordner",
      "conditions": {
        "counterparty_normalized": {"exists": true},
        "no_rule_matched": true
      },
      "target_path": "00_Inbox/Nach_Absender/{counterparty_normalized}",
      "actions": ["create_folder_if_not_exists", "flag_for_manual_review"]
    }
  ],

  "smart_folders": [
    {
      "name": "Offene_Rechnungen",
      "filter": {
        "doc_type": ["Rechnung", "Mahnung"],
        "payment_status": "offen"
      },
      "sort": {"due_date": "asc"},
      "purpose": "Alle unbezahlten Rechnungen mit Faelligkeit"
    },
    {
      "name": "Fristen_naechste_30_Tage",
      "filter": {
        "due_date": {"between": ["today", "today+30d"]}
      },
      "sort": {"due_date": "asc"},
      "purpose": "Dokumente mit anstehenden Fristen"
    },
    {
      "name": "Steuerrelevant_aktuelles_Jahr",
      "filter": {
        "OR": [
          {"doc_type": ["Spendenquittung", "Handwerkerrechnung_Steuer", "Arztrechnung"]},
          {"keywords_any": ["steuerlich absetzbar", "Werbungskosten", "Sonderausgaben"]},
          {"category": "Steuern"}
        ],
        "doc_date": {"year": "current"}
      },
      "purpose": "Belege fuer die naechste Steuererklaerung"
    },
    {
      "name": "Mieteinnahmen_aktuelles_Jahr",
      "filter": {
        "property_type": "eigentum_vermietet",
        "amount_type": "einnahme",
        "doc_date": {"year": "current"}
      },
      "group_by": "property_id",
      "purpose": "Uebersicht Mieteinnahmen pro Objekt"
    },
    {
      "name": "Betriebskosten_Vermietung",
      "filter": {
        "property_type": "eigentum_vermietet",
        "amount_type": "ausgabe",
        "keywords_any": ["Betriebskosten", "Nebenkosten", "Heizung", "Wasser", "Muell"]
      },
      "group_by": ["property_id", "rental_period"],
      "purpose": "Belege fuer Nebenkostenabrechnungen an Mieter"
    },
    {
      "name": "Versicherungspolicen_aktiv",
      "filter": {
        "doc_type": ["Versicherungspolice", "Versicherungsschein"],
        "status": {"not": "archived"}
