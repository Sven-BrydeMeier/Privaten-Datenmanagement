  "metadata_schema": {
    "core_fields": {
      "doc_id": {
        "type": "uuid",
        "required": true,
        "auto_generated": true
      },
      "filename_original": {
        "type": "string",
        "required": true
      },
      "filename_normalized": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}__[A-Za-z0-9_-]+__[A-Za-z0-9_-]+__[A-Za-z0-9_-]+\\.pdf$",
        "required": true
      },
      "doc_type": {
        "type": "enum",
        "ref": "doc_type_taxonomy",
        "required": true
      },
      "doc_date": {
        "type": "date",
        "format": "YYYY-MM-DD",
        "required": true
      },
      "import_date": {
        "type": "datetime",
        "auto_generated": true
      },
      "counterparty": {
        "type": "string",
        "description": "Absender oder Gegenpartei",
        "required": true
      },
      "counterparty_normalized": {
        "type": "string",
        "description": "Normalisierter Name ohne GmbH etc."
      },
      "subject": {
        "type": "string",
        "description": "Betreff oder Thema"
      },
      "category": {
        "type": "enum",
        "values": ["Identitaet", "Finanzen", "Steuern", "Versicherungen", "Wohnen", "Gesundheit", "Fahrzeuge", "Arbeit", "Vertraege", "Familie", "Sonstiges"]
      },
      "static_folder_path": {
        "type": "string",
        "description": "Pfad im statischen Ordnerbaum"
      },
      "status": {
        "type": "enum",
        "values": ["inbox", "processed", "action_required", "archived"],
        "default": "inbox"
      }
    },
    "financial_fields": {
      "amount": {
        "type": "decimal",
        "currency": "EUR"
      },
      "amount_type": {
        "type": "enum",
        "values": ["einnahme", "ausgabe", "neutral"]
      },
      "payment_status": {
        "type": "enum",
        "values": ["offen", "bezahlt", "gemahnt", "storniert"]
      },
      "due_date": {
        "type": "date"
      },
      "paid_date": {
        "type": "date"
      },
      "paid_from_account": {
        "type": "string",
        "description": "Bankkontoname von dem bezahlt wurde"
      },
      "iban_counterparty": {
        "type": "string",
        "pattern": "^[A-Z]{2}\\d{2}[A-Z0-9]{4,30}$"
      },
      "bic": {
        "type": "string"
      }
    },
    "reference_fields": {
      "invoice_number": {
        "type": "string"
      },
      "contract_number": {
        "type": "string"
      },
      "policy_number": {
        "type": "string",
        "description": "Versicherungsnummer"
      },
      "customer_number": {
        "type": "string",
        "description": "Kundennummer"
      },
      "case_number": {
        "type": "string",
        "description": "Aktenzeichen"
      },
      "tax_year": {
        "type": "integer"
      }
    },
    "property_fields": {
      "property_id": {
        "type": "string",
        "description": "Eindeutige Immobilien-ID"
      },
      "property_address": {
        "type": "string"
      },
      "property_type": {
        "type": "enum",
        "values": ["eigene_miete", "eigentum_selbstgenutzt", "eigentum_vermietet"]
      },
      "tenant_name": {
        "type": "string"
      },
      "rental_period": {
        "type": "string",
        "description": "Abrechnungszeitraum"
      }
    },
    "pension_fields": {
      "pension_type": {
        "type": "enum",
        "values": ["gesetzlich_drv", "versorgungswerk", "riester", "ruerup", "betrieblich", "privat"]
      },
      "pension_provider": {
        "type": "string"
      },
      "contribution_year": {
        "type": "integer"
      }
    },
    "vehicle_fields": {
      "license_plate": {
        "type": "string"
      },
      "vehicle_type": {
        "type": "enum",
        "values": ["pkw", "motorrad", "fahrrad", "anhaenger"]
      },
      "vin": {
        "type": "string",
        "description": "Fahrzeug-Identnummer"
      }
    },
    "family_fields": {
      "family_member": {
        "type": "string"
      },
      "relation": {
        "type": "enum",
        "values": ["selbst", "ehepartner", "kind", "eltern", "sonstige"]
      }
    },
    "retention_fields": {
      "retention_years": {
        "type": "integer",
        "default": 10
      },
      "retention_reason": {
        "type": "enum",
        "values": ["steuerlich_10j", "steuerlich_6j", "gewaehrleistung_2j", "verjaehrung_3j", "lebenslang", "unbegrenzt"]
      },
      "earliest_deletion_date": {
        "type": "date"
      }
    },
    "ai_fields": {
      "ocr_text": {
        "type": "text"
      },
      "ocr_confidence": {
        "type": "float"
      },
      "ai_summary": {
        "type": "text"
      },
      "ai_classification_confidence": {
        "type": "float"
      },
      "keywords": {
        "type": "array",
        "items": "string"
      }
    }
  },

