        "doc_date": {"gte": "today-90d"}
      },
      "purpose": "Aktuelle Vertragsaenderungen zur Pruefung"
    },
    {
      "name": "Dokumente_ohne_Zuordnung",
      "filter": {
        "static_folder_path": {"starts_with": "00_Inbox"},
        "import_date": {"lt": "today-7d"}
      },
      "purpose": "Laenger als 7 Tage im Posteingang"
    },
    {
      "name": "Bald_zu_loeschen",
      "filter": {
        "earliest_deletion_date": {"between": ["today", "today+365d"]}
      },
      "sort": {"earliest_deletion_date": "asc"},
      "purpose": "Dokumente deren Aufbewahrungsfrist bald endet"
    },
    {
      "name": "Hohe_Betraege",
      "filter": {
        "amount": {"gte": 1000}
      },
      "sort": {"amount": "desc"},
